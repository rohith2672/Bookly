<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/get"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/righteous"
        android:text="Get"
        android:background="@drawable/admin_log_signupbg"
        app:layout_constraintStart_toEndOf="@+id/bookid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/righteous"
        android:text="Book Master:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/righteous"
        android:text="Opening Book Count:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spindept" />

    <EditText
        android:id="@+id/bookid"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Book id"
        android:elevation="10dp"
        android:background="@drawable/admin_log_signupbg"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <EditText
        android:id="@+id/bookopeningcount"
        android:layout_width="77dp"
        android:layout_height="42dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/admin_log_signupbg"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bookname"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Book Name"
        android:paddingStart="10dp"
        android:background="@drawable/admin_log_signupbg"
        android:elevation="10dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookid" />

    <Spinner
        android:id="@+id/spindept"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:elevation="10dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/admin_log_signupbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinyear" />

    <Spinner
        android:id="@+id/spinyear"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:elevation="10dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/admin_log_signupbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookname" />
    <Button
        android:id="@+id/Bookcreate"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/righteous"
        android:text="Create"
        android:elevation="10dp"
        android:background="@drawable/admin_log_signupbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bookmodify"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/admin_log_signupbg"
        android:fontFamily="@font/righteous"
        android:text="Modify"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bookcreate" />

    <Button
        android:id="@+id/Bookdelete"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/righteous"
        android:text="Delete"
        android:elevation="10dp"
        android:background="@drawable/admin_log_signupbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bookmodify" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="33dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/righteous"
        android:text="Book id Finder:"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toEndOf="@+id/Bookcreate"
        app:layout_constraintTop_toBottomOf="@+id/bookopeningcount" />

    <EditText
        android:id="@+id/idfinder"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/admin_log_signupbg"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Book Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/get2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/righteous"
        android:background="@drawable/admin_log_signupbg"
        android:text="Get id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/Bookmodify"
        app:layout_constraintTop_toBottomOf="@+id/idfinder" />


</androidx.constraintlayout.widget.ConstraintLayout>